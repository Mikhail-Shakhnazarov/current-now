{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MarcoSpan",
  "type": "object",
  "required": [
    "id",
    "source_range",
    "kind",
    "text",
    "fingerprint"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^m:\\\\d{4}$"
    },
    "source_range": {
      "type": "object",
      "required": [
        "line_start",
        "line_end",
        "col_start",
        "col_end"
      ],
      "properties": {
        "line_start": {
          "type": "integer",
          "minimum": 1
        },
        "line_end": {
          "type": "integer",
          "minimum": 1
        },
        "col_start": {
          "type": "integer",
          "minimum": 0
        },
        "col_end": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "kind": {
      "type": "string",
      "enum": [
        "numbered_item",
        "bullet",
        "block"
      ]
    },
    "text": {
      "type": "string"
    },
    "fingerprint": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    }
  }
}
