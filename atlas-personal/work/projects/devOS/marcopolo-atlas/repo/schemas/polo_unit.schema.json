{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PoloUnit",
  "type": "object",
  "required": [
    "id",
    "kind",
    "thread_id",
    "text",
    "fingerprint"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": [
        "thread",
        "src",
        "open",
        "prop"
      ]
    },
    "thread_id": {
      "type": "string",
      "pattern": "^T\\\\d{2}$"
    },
    "text": {
      "type": "string"
    },
    "fingerprint": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    }
  }
}
